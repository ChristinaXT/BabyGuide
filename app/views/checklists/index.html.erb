<div>
    <table class="table">
    <tbody>
        <tr>
            <th>Checklists</th>
            <th>Finished/Unfinished</th>
            <th>Expand checklist</th>
        </tr>
        <% @checklists.each do |checklist| %>
        <tr>
            <td><%= checklist.item %></td>
            <% if checklist.checklist_finished? %>
                <td class="text-success">Finished</td>
            <% else %>
                <td class="text-danger">Unfinished</td>
            <% end %>
            <td><%= link_to "Expand", checklist_path(checklist) %></td>
        <% end %>
        </tr>
        </tbody>
    </table>

    <p><%= link_to "Create a Checklist", new_user_checklist_path(current_user) %></p>

</div>
