<h1>Hello <%= @user.name %></h1>

<div>
    <div>
    <% if current_user == @user %>
        <% unless @open_requests.empty? %>
            <p class="text-warning"><b>This is a baby party help request, please accept:</b></p>
                <table class="table">
                <tbody>
                <tr>
                    <th>Requests</th>
                    <th>Accept</th>
                </tr>
                <% @open_requests.each do |user_request| %>
                    <tr>
                        <td><%= link_to user_request.request.item, user_request_path(user_request.user, user_request.request) %></td>
                        <td>
                        <%= form_for(user_request, url: users_request_path(user_request), method: :patch) do |f| %>

<div>
    <% if @user.admin %>
        <h2>ADMIN</h2>
    <% end %>
</div>
<div>
    <p>Height: <%= @user.height %> inches</p>
    <p>Tickets: <%= @user.tickets %></p>
    <p>Happiness Rating:<%= @user.happiness %></p>
    <p>Nausea Rating: <%= @user.nausea %></p>

    <% if @user.admin == false %>
        <p>Current Mood: <%= @user.mood %></p>
    <% end %>
</div>

<div>
    <p><%= link_to "See attractions", attractions_path %></p>

    <p><%= link_to "Log Out", controller: 'sessions', action: 'destroy' %></p>
</div>
