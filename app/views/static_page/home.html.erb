<div>
    <% if current_user %>
        <h1>Welcome <%= current_user.name %>!</h1>
    <div>
    <table class="table">
        <tbody>
            <tr>
                <th>Item</th>
                <th>Finshed/Unfinished</th>
                <th>Closed/Open</th>
                <th>Checkout Request</th>
                </tr>
                <% current_user.requests.each do |request| %>
                    <tr>
                        <td><%= request.item %></td>

                        <% if request.finished %>
                        <td class="text-success"><%= request.status %></td>
                      <% else %>
                        <td class="text-danger"><%= request.status %></td>
                        <% end %>

                        <% if request.user_closed?(current_user) %>
                        <td class="text-success">Closed</td>
                     <% else %>
                        <td class="text-warning">Open</td>
                        <% end %>





        <p><%= link_to "Your Profile", user_path(current_user.id) %></p>
        <p><%= link_to "Log Out", controller: 'sessions', action: 'destroy' %></p>
    <% else %>
        <p><%= link_to "Sign Up", new_user_path %></p>
        <p><%= link_to "Log In", signin_path %></p>
    <% end %>
</div>
